<h3>予約済み一覧</h3>
  <table class="index-table">
    <thead>
      <tr>
        <th>施設画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>合計料金</th>
        <th>チェックイン日</th>
        <th>チェックアウト日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>

    <tbody>
      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= image_tag reservation.room.facilitypic.url , class:"fpic", alt: "施設画像" %></td>
          <td><%= reservation.room.facilityname %></td>
          <td><%= reservation.room.facilityintroduction %></td>
          <td><%= "¥#{reservation.total_price}" %></td>
          <td><%= l reservation.check_in_date %></td>
          <td><%= l reservation.check_out_date %></td>
          <td><%= l reservation.created_at %></td>
          <td>
            <%= link_to "キャンセル",  reservation, method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
