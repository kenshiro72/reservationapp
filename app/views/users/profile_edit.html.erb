<h3>プロフィール編集</h3>

<%= form_for current_user, url: users_profile_update_path do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction ,"自己紹介" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>

    <tr>
      <th><%= f.label :profilepic,"プロフィール画像" %></th>
      <td><%= f.file_field :profilepic, class: "image" %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "プロフィールに戻る", users_profile_path %></li>
    </ul>
  </div>
<% end %>
